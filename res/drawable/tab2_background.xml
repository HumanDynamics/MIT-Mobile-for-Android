<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- pressed state --> 
    <item android:drawable="@drawable/tab2_unselected_pressed"
          android:background="@drawable/tab2_unselected_pressed"
          android:state_pressed="true" />
    <!-- When selected, use grey -->
    <item android:drawable="@drawable/tab2_selected"
          android:state_selected="true" />     
    <!-- When not selected, use white-->
    <item android:drawable="@drawable/tab2_unselected" />
</selector>
