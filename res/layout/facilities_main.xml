<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/main_repeat"
	android:orientation="vertical"
	android:layout_width="fill_parent"
 	android:layout_height="wrap_content">
  
    <edu.mit.mitmobile2.TitleBar
  		android:text="Facilites"
  		android:layout_width="fill_parent"
  		android:layout_height="wrap_content" />
  
	<TextView android:layout_width="wrap_content" 
	          android:layout_height="wrap_content"
	          android:textColor="#000000"
	          android:text="@string/facilities_home" android:textStyle="bold" android:visibility="visible"></TextView>

	<!-- Divider -->
	<View
		android:layout_width="fill_parent"
		android:layout_height="@dimen/dividerHeight"
		android:background="@color/dividerColor" />

	<!-- Report a Problem -->
    <edu.mit.mitmobile2.TwoLineActionRow android:id="@+id/facilitiesReportAProblemActionRow"
            	android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/rowBackground"
                android:text="Report A Problem"  />

	<!-- Divider -->
	<View
		android:layout_width="fill_parent"
		android:layout_height="@dimen/dividerHeight"
		android:background="@color/dividerColor" />

	<!-- Call Facilities -->
    <edu.mit.mitmobile2.TwoLineActionRow android:id="@+id/facilitiesCallFacilitiesActionRow"
            	android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/rowBackground"
                android:text="Call Facilities"  />


</LinearLayout>
