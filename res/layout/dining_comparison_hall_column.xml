<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#f00"
  >
  
  <TextView
      android:id="@+id/diningComparisonHallColumnTitle"
      android:layout_width="match_parent"
      android:layout_height="20dip"
      />
  
  <TextView
      android:id="@+id/diningComparisonHallColumnSubtitle"
      android:layout_width="match_parent"
      android:layout_height="20dip"
      />
  
    <TextView
      android:id="@+id/diningComparisonHallColumnDescription"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:visibility="gone"
      />
    
    <TextView
      android:id="@+id/diningComparisonHallColumnClosed"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:text="This hall is closed"
      android:visibility="gone"
      />
  
</LinearLayout>