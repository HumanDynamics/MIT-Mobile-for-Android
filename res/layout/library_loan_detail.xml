<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
  
    <edu.mit.mitmobile2.TitleBar
        android:text="Loans"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
  
  	<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingTop="6dip"
			android:paddingLeft="@dimen/horizontalPadding"
			android:id="@+id/loanTitleTV"
			style="@style/ContentTitle" />
        
  	<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingTop="6dip"
			android:paddingLeft="@dimen/horizontalPadding"
			android:id="@+id/loanAuthorTV"
			style="@style/ContentTitle" />

  	<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingTop="6dip"
			android:paddingLeft="@dimen/horizontalPadding"
			android:id="@+id/loanCallNoTV"
			style="@style/ContentTitle" />
        
  	<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingTop="6dip"
			android:paddingLeft="@dimen/horizontalPadding"
			android:id="@+id/loanLibraryTV"
			style="@style/ContentTitle" />

  	<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingTop="6dip"
			android:paddingLeft="@dimen/horizontalPadding"
			android:id="@+id/loanISBNTV"
			style="@style/ContentTitle" />

  	<TextView
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:paddingTop="6dip"
			android:paddingLeft="@dimen/horizontalPadding"
			android:id="@+id/loanOverdueTV"
			style="@style/ContentTitle" />

	<Button
			android:id="@+id/loanRenewButton"
			android:text="Renew this book"
			android:visibility="visible"
			android:layout_gravity="center"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"/>			

    <edu.mit.mitmobile2.FullScreenLoader
        android:id="@+id/librarySearchLoading"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:visibility="gone" />
            
</LinearLayout>