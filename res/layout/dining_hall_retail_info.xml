<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    
    <edu.mit.mitmobile2.dining.DiningHallHeaderView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/diningHallHouseInfoHeader"
        />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/retailDescriptionTV"
        android:padding="@dimen/standardPadding"
        android:layout_margin="@dimen/standardPadding"
        style="@style/BodyText"
        android:background="#fff"
        />
    
    <include layout="@layout/dining_hall_info_item_row"
    	android:id="@+id/menuItemRow"
    	android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="@dimen/standardPadding"
        android:layout_marginRight="@dimen/standardPadding" />
    
    <ListView
        android:id="@+id/diningHallHouseInfoScheduleLV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
    />
    
     <ListView 
        android:id="@+id/diningHallInfoLV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="#D2D2D2"
        android:dividerHeight="10.0sp"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:layout_marginBottom="10sp"
        android:listSelector="@drawable/highlight_background"
        />

</LinearLayout>
