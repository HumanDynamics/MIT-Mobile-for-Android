<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    
    <edu.mit.mitmobile2.dining.DiningHallHeaderView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/diningHallHouseInfoHeader"
        />
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/retailDescriptionTV"
        android:padding="@dimen/standardPadding"
        android:layout_margin="@dimen/standardPadding"
        style="@style/BodyText"
        android:background="#fff"
        />
    
    <include layout="@layout/dining_hall_info_item_row"
    	android:id="@+id/menuItemRow"
    	android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:layout_marginLeft="@dimen/standardPadding"
        android:layout_marginRight="@dimen/standardPadding" />
    
    <LinearLayout
        android:id="@+id/diningHallInfoScheduleContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/standardPadding"
        android:layout_marginRight="@dimen/standardPadding"
        android:layout_marginBottom="@dimen/standardPadding"
    />
    
     <LinearLayout 
        android:id="@+id/diningHallInfoContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/standardPadding"
        android:layout_marginRight="@dimen/standardPadding"
        android:layout_marginBottom="@dimen/standardPadding"
        />

</LinearLayout>
