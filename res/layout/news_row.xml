<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="horizontal"
  android:layout_width="wrap_content"
  android:layout_height="80px">
  
  
  	<FrameLayout
  		android:layout_width="81dip"
  		android:layout_height="85dip">
  		
  		<FrameLayout
  			android:layout_gravity="center_vertical|right"
  			android:layout_width="78dip"
  			android:layout_height="78dip"
  			android:background="#000000">
  		
			<ImageView android:id="@+id/newsRowIV"
				android:src="@drawable/news_placeholder"	
				android:layout_gravity="center"
				android:layout_width="75dip" 
				android:layout_height="75dip"/>
			
		</FrameLayout>
		
	</FrameLayout>
	
	<LinearLayout
		android:orientation="vertical"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingLeft="10dip" >
		
		<TextView
			android:id="@+id/newsRowTV"
			android:paddingTop="3dip"
			android:paddingRight="@dimen/horizontalPadding"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:ellipsize="end"
			style="@style/ListItemPrimary" />
			
		<TextView
			android:id="@+id/newsRowDeckTV"
			android:paddingBottom="3dip"
			android:paddingRight="@dimen/horizontalPadding"
			android:layout_width="wrap_content"
			android:layout_height="fill_parent"
			android:ellipsize="end"
			style="@style/ListItemSecondary" />
			
	</LinearLayout>

</LinearLayout>
