<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:id="@+id/stopsTop"
  android:background="@drawable/main_repeat"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent">

	<LinearLayout 
			android:orientation="horizontal"
 	  		android:layout_width="fill_parent"
  	  		android:layout_height="wrap_content">
  	  		
  		<ImageView android:id="@+id/stopsMapIV"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content" />
			
		<TextView android:id="@+id/stopsTitleTV" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:paddingTop="@dimen/verticalPadding"
			android:paddingBottom="@dimen/verticalPadding"
			android:paddingLeft="@dimen/horizontalPadding"
			android:paddingRight="@dimen/horizontalPadding"
			style="@style/ContentTitle" />
			
	</LinearLayout>
	
	<LinearLayout 
			android:orientation="horizontal"
			android:paddingBottom="3px"
 	  		android:layout_width="fill_parent"
  	  		android:layout_height="wrap_content">
  		<ImageView android:src="@drawable/shuttle_alert_descriptive"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:paddingLeft="@dimen/horizontalPadding"
            android:paddingTop="@dimen/verticalPadding"/>
		<TextView android:id="@+id/stopsInfoTV" 
			style="@style/SmallPrint"
			android:text="Tap the 'Alert Me' icon to be notified 5 minutes before the estimated arrival time."
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
            android:paddingLeft="@dimen/horizontalPadding"
            android:paddingTop="@dimen/verticalPadding"
            android:paddingBottom="16dip"/>
            
	</LinearLayout>
		
