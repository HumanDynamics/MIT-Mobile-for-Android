<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/navbar">
    
    <LinearLayout 
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    	android:orientation="horizontal">
    	
	    <ImageView android:id="@+id/titleHomeBtn"
	        android:layout_width="20dip"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical|center_horizontal"
	        android:src="@drawable/titlebar_action_home"/>
	    
	    <TextView android:id="@+id/titleModuleHomeBtn"
	        android:layout_toRightOf="@id/titleHomeBtn"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_vertical|center_horizontal"/>
    </LinearLayout>
    	
    <LinearLayout android:id="@+id/titlePrimaryList"
        android:layout_alignParentRight="true"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content">
	    
    	<ImageView android:id="@+id/titleOverflowBtn"
        	android:layout_width="20dip"
        	android:layout_height="wrap_content"
        	android:layout_gravity="center_vertical|center_horizontal"
        	android:src="@drawable/popup_menu_anchor"/>
    </LinearLayout>
</RelativeLayout>