<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/librariesFormThankYou"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    android:background="@color/rowBackground"
    >
    
    <LinearLayout
   		android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:orientation="vertical"
    	>
    
    	<edu.mit.mitmobile2.TwoLineActionRow
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:id="@+id/librariesThankYouContentActionRow"
    		/>
    	
    	<edu.mit.mitmobile2.DividerView
    		android:layout_width="fill_parent"
    		android:layout_height="@dimen/dividerHeight"
    		android:background="@color/dividerColor"
    		/>
    	
    	<edu.mit.mitmobile2.TwoLineActionRow
    		android:text="Return home"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:id="@+id/librariesThankYouReturnHome"
    		/>	    	
    		
    	<edu.mit.mitmobile2.DividerView
    		android:layout_width="fill_parent"
    		android:layout_height="@dimen/dividerHeight"
    		android:background="@color/dividerColor"
    		/>
    	
	</LinearLayout>
</ScrollView>