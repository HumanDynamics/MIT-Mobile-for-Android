<?xml version="1.0" encoding="utf-8"?>
<edu.mit.mitmobile2.LockingScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:id="@+id/libraryDetailsLinearLayout"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        
        <edu.mit.mitmobile2.TwoLineActionRow
            android:id="@+id/libraryDetailTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
            
        <edu.mit.mitmobile2.DividerView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dividerHeight" />
            
        <edu.mit.mitmobile2.TwoLineActionRow
            android:id="@+id/libraryDetailPhone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"  />
            
                    <edu.mit.mitmobile2.DividerView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dividerHeight" />
            
        <edu.mit.mitmobile2.TwoLineActionRow
            android:id="@+id/libraryDetailRoom"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"  />
            
        <edu.mit.mitmobile2.DividerView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dividerHeight" />
        
        <TextView android:id="@+id/libraryDetailInfo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/horizontalPadding"
            android:paddingRight="@dimen/horizontalPadding"
            android:visibility="gone" 
            android:textColor="#000000"/>
            
        <edu.mit.mitmobile2.FullScreenLoader
            android:id="@+id/libraryDetailLoading"
            android:layout_width="fill_parent"
            android:layout_height="300dp"
            android:visibility="gone" />
            
        <edu.mit.mitmobile2.DividerView
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dividerHeight" />
            
    </LinearLayout>
</edu.mit.mitmobile2.LockingScrollView>