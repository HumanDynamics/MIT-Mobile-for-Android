<?xml version="1.0" encoding="utf-8"?>
<edu.mit.mitmobile2.LockingScrollView
	  xmlns:android="http://schemas.android.com/apk/res/android"
	  android:id="@+id/newsDetailScrollView"
	  android:orientation="vertical"
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent">
	<LinearLayout
	  android:orientation="vertical"
	  android:scrollbars="vertical"
	  android:layout_width="fill_parent"
	  android:layout_height="fill_parent">
  
    <!-- Description and Sharing -->
  	<LinearLayout 
			android:orientation="horizontal" 
			android:paddingBottom="5dip"
			android:paddingLeft="10dip"
	  		android:paddingRight="10dip"
			android:layout_width="fill_parent" 
			android:layout_height="wrap_content" >
		<LinearLayout
				  android:orientation="vertical"
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content">
			<TextView android:id="@+id/newsDetailsTitleTV"   
				android:paddingTop="6dip"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				style="@style/ContentTitle" />
			<TextView android:id="@+id/newsAuthorTV" 
				android:paddingTop="6dip" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				style="@style/Byline" />
			<TextView
				android:id="@+id/newsDateTV" 
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content"
				style="@style/Byline" />
		</LinearLayout>
	</LinearLayout>
		
	<!-- Caption -->
	
	<RelativeLayout 
			  	android:paddingLeft="10dip"
	  			android:paddingRight="10dip"
				android:layout_width="fill_parent"
   				android:layout_height="wrap_content">
				
		<RelativeLayout  
				android:id="@+id/newsDetailsImageContainer"
				android:paddingTop="4dip"
				android:layout_alignParentRight="true"
				android:layout_alignParentTop="true"
				android:layout_width="140dip"
   				android:layout_height="wrap_content">
				
			<WebView android:id="@+id/newsDetailsWV"
				android:layout_alignParentRight="true"
				android:layout_width="140dip" 
				android:layout_height="wrap_content"/>
		  
			<LinearLayout android:orientation="horizontal" 
				android:id="@+id/newsMoreImagesContainer"
				android:paddingTop="3dip"
				android:layout_below="@id/newsDetailsWV"
				android:layout_alignParentRight="true"
				android:layout_width="wrap_content" 
				android:layout_height="wrap_content" >
				
				<TextView android:id="@+id/newsMoreTV" 
					android:paddingRight="4dip"
					android:layout_gravity="center_vertical"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"
					style="@style/Caption" />	
				
				<ImageView android:id="@+id/newsMoreIV" 
					android:src="@drawable/button_zoom_in"
					android:layout_width="wrap_content" 
					android:layout_height="wrap_content"/>
	
			</LinearLayout>	
		</RelativeLayout>
		
		<TextView android:id="@+id/newsDeckTV" 
			android:paddingRight="10dip"
			android:layout_alignParentLeft="true"
			android:layout_toLeftOf="@id/newsDetailsImageContainer"
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			style="@style/Deck" />
					
	</RelativeLayout>
	
			
  	<!-- Body -->
	<WebView 
		android:id="@+id/newsBodyTV" 
		android:paddingTop="20dip"
		android:layout_width="fill_parent" 
		android:layout_height="wrap_content" />
		
	</LinearLayout>
</edu.mit.mitmobile2.LockingScrollView>
